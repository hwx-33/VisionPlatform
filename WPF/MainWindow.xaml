<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="517" Width="920" WindowState="Maximized">
    <Grid>
        <DockPanel>
            <!--停靠布局，让菜单栏和工具栏位于窗口顶部-->
            <Menu DockPanel.Dock="Top" Height="54">
                <MenuItem Header="文件">
                </MenuItem>
                <MenuItem Header="界面"></MenuItem>

            </Menu>
            <Image DockPanel.Dock="Top" Height="378" Source="testresize.png"/>
            <StatusBar DockPanel.Dock="Bottom" Height="30">
                <TextBlock Text="statusBar"></TextBlock>
            </StatusBar>
        </DockPanel>
    </Grid>
</Window>
